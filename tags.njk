---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/home.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag }}/
---

<h4 style="text-align: center; margin-top: 2rem;">
  Posts tagged: “{{ tag }}”
</h4>

{% set postslist = collections[ tag ] %}
{% include "postslist.njk" %}

<div style="text-align: center">
  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
</div>