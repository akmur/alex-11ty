---
layout: layouts/base.njk
templateClass: tmpl-post
---

<div id="main" class="main">
  <article class="post">
    <header class="postHeader">
      {% if title %}
      <h1 class="postContent__title">
        {{ title }}
      </h1>
      {% endif %} {% if date %}
      {# <div>
        <time class="postsList__date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
      </div> #}
      <div class="postContent__date">Posted on {{ date.toUTCString() }}</div>
      {% endif %}
      
      {% if tags.length > 0 %}
        <div class="postContent__tags">
          {% for tag in tags %}
            {%- if collections.tagList.indexOf(tag) != -1 -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <div class="postContent__tag">
              <a href="{{ tagUrl | url }}" class="Tag">{{ tag }}</a>
            </div>
            {%- endif -%}
          {% endfor %}
        </div>
      {% endif %}
      <!-- .entry-meta -->
    </header>
    {% if featured_image %}
    <div class="postContent__image">
      <div class="postContent__thumbnail">
        <img src="{{ featured_image }}" />
      </div>
    </div>
    {% endif %}
    {{ content | safe }}
  </article>

